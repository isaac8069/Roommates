<section id="search" class="search-wrap">
    <div class="container">
        <h1 class="pageTitle">Apartment Buddy</h1>
        <form action="/apartment/search" method="GET" class="search-form">
            <i class="fas fa-search"></i>
            <div class='form-group'>
                <div class="container">
                    <label for="location">Find Listings by Location</label>
                </div>
            </div>

            <div class='form-group'>
                <div class="container">
                    <input type="search" name="location" id="location" placeholder="Williamsburg, Brooklyn">
                </div>
            </div>

            <div class='form-group'>
                <div class="container">
                    <input type="submit" class="btn btn-primary" value="search">
                </div>
            </div>
        </form>
    </div>
</section>