<h1 class="pageTitle">Apartment Listing</h1>
<p>If no changes are needed please hit submit</p>
<form action="/apartment/<%= apartment.id %>/update?_method=PUT" method="post">
    <div class="container">
        <label for='title'>Title</label>
        <input type="text" name="title" value='<%= apartment.title %>'>
    </div>

    <div class="container">
        <label for='rent'>Rent</label>
        <input type="number" name="rent" value='<%= apartment.rent %>'>
    </div>

    <div class="container">
        <label for='description'>About Listing</label>
        <input type="text" name="description" value='<%= apartment.description %>'></input>
    </div>

    <div class="container">
        <label for='location'>Location</label>
        <input type="text" name="location" value='<%= apartment.location %>'>
    </div>

    <div class="container">
        <label for='bedrooms'>Bedrooms</label>
        <input type="text" name="bedrooms" value='<%= apartment.bedrooms %>'>
    </div>

    <div class="container">
        <label for='bathrooms'>Bathrooms</label>
        <input type="text" name="bathrooms" value='<%= apartment.bathrooms %>'>
    </div>

    <div class="container">
        <label for='amenities'>Amenities</label>
        <input type="text" name="amenities" value='<%= apartment.amenities %>'>
    </div>

    <div class="container">
        <label for='roommates'>Number of Current Roommates</label>
        <input type="text" name="roommates" value='<%= apartment.roommates %>'>
    </div>
    <div class="container">
        <label for='image'>Image: DO NOT EDIT</label>
        <input type="text" name="image" value='<%= image %>'>
    </div>

    <div class="container">
        <input type="submit" class="btn btn-primary">
    </div>
</form>